{
	"name": "ETHSBell",
	"version": "1.0.0",
	"manifest_version": 2,
	"description": "A Chrome Extension version of ETHSBell",
	"homepage_url": "https://ethsbell.xyz",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"background": {
		"scripts": ["src/background/background.js", "src/browser_action/helpers.js"]
	},
	"default_locale": "en",
	"options_page": "/options/index.html",
	"browser_action": {
		"default_icon": "icons/icon128.png",
		"default_title": "ETHSBell",
		"default_popup": "src/browser_action/browser_action.html"
	},
	"permissions": [
		"notifications",
		"storage",
		"alarms",
		"https://ethsbell.com/*",
		"https://ethsbell.xyz/*",
		"https://codeths.eths.k12.il.us/*",
		"http://localhost:8000/*"
	]
}
